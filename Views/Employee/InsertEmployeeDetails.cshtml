<h2>Insert Employee</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="InsertEmployeeDetails" >
            
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />  
            </div>
            @* <div class="form-group">
                <label asp-for="DeptName" class="control-label"></label>
                <input asp-for="DeptName" class="form-control" />
            </div> *@
            <div class="form-group">
                <label asp-for="DeptName" class="control-label"></label>
                <input type="radio" asp-for="DeptName"  value="IT Operations" /> IT Operations
                <input type="radio" asp-for="DeptName"  value= "Catalogue" /> Catalogue
                <input type="radio" asp-for="DeptName"  value= "Analyst" /> Analyst
            </div>
            <div class="form-group">
                <label asp-for="Salary" class="control-label"></label>
                <input asp-for="Salary" class="form-control" />
            </div>
            @* <div class="form-group">
                <label asp-for="IsActive" class="control-label"></label>
                <input asp-for="IsActive" class="form-control" />
            </div> *@
            <div>
                <input type="checkbox" id="isActive" name="IsActive" value="true">
                <label for="isActive">Active</label>
            </div>
            <div class="form-group">
                <label asp-for="dob" class="control-label"></label>
                <input asp-for="dob" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Basic" class="control-label"></label>
                <input asp-for="Basic" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="HRA " class="control-label"></label>
                <input asp-for="HRA" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Tax" class="control-label"></label>
                <input asp-for="Tax" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Allowances" class="control-label"></label>
                <input asp-for="Allowances" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
            </div>
            <br />
            <div >
                <input type="submit" class="button" value="Insert"/>
            </div>
        </form>
    </div>
</div>
