@{
    ViewData["Title"] = "UpdateEmployeeDetails";
}
<h2>Update Employee</h2>
@ViewData["Message"]
<h2>Filter Employee Details</h2>
<div class="container mt-5 ">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card text-center" style="width: 15rem; height:20rem;">
                <div class="card-body">
                    <form asp-action="UpdateEmployeeDetails" id="registrationForm">
                        
                            <h2>Update Form</h2>
                            <div class="form-group">
                                <label asp-for="Name" class="control-label">Name</label>
                                <input asp-for="Name" placeholder="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <br />
                            <div class="form-group">
                                <label asp-for="DeptName" class="control-label">Department Name</label>
                                <input asp-for="DeptName" placeholder="Department Name"  class="form-control" />
                                <span asp-validation-for="DeptName" class="text-danger"></span>
                            </div>
                        <br />
                        <div>
                            <button type="submit" class="btn btn-secondary" onclick="return confirm('Are you sure you want to Update the Employee Department')">Update</button>
                        </div>
                        
                    </form>
                </div>
            </div>
        </div>
    </div>
   </div>
 



