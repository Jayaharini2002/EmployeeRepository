@model ListEmployees1.Models.Login;
@{
    ViewData["Title"] = "Login";
}
<h4>Login Credentials</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Index">
            
            <div class="form-group">
                <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
                <i class="glyphicon glyphicon-user"></i>
                <label asp-for="username" class="control-label">User Name</label>
                <input asp-for="username" placeholder="Username" class="form-control" />
            </div>
            <div class="form-group">
                <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
                <i class="glyphicon glyphicon-lock"></i>
                 <label asp-for="passwd" class="control-label">Password</label>
                 <br />
               
                <input asp-for="passwd" placeholder="Password" type="password" class="form-control"/>
                @* <input type="password" class="control-label" id="pwd" name="pwd" minlength="3"><br><br> *@
          
                @* <input type="password" class="form-control" id="pwd" placeholder="Enter password" name="pwd"> *@
            </div>
            <br />
            <div>
                <input type="submit" class="button" value="Login" />
            </div>
        </form>
        @{
            @ViewData["message"]
        }
    </div>
</div>
