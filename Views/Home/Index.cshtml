@model ListEmployees1.Models.Login;
@{
    ViewData["Title"] = "Login";
}
 <h4>Login Credentials</h4>
<hr />

<div class="container mt-5 ">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card text-center" style="width: 38rem;">
                <div class="card-body">
                    <div asp-validation-summary="All"></div>

                    <form asp-action="Index" id="registrationForm" >
       
            <div class="form-group">
                            
                <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
                <i class="glyphicon glyphicon-user"></i>
                <label asp-for="username" class="control-label">User Name</label>
                <input asp-for="username" placeholder="Username" class="form-control" />
                <span asp-validation-for="username" class="text-danger"></span>
            
            </div>
            <div class="form-group">
                <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
                <i class="glyphicon glyphicon-lock"></i>
                <label asp-for="passwd" class="control-label">Password</label>
                <br />

                <input asp-for="passwd" placeholder="Password" type="password" class="form-control" />
                <span asp-validation-for="passwd" class="text-danger"></span>
            </div>
            <br />
                       
            <div>
                 <input type="submit" class="btn btn-secondary" value="Login" />
            </div>
        </form>
    
        @{
            @ViewData["message"]
        }
        </div>
    </div>
    </div>
    </div>
</div>

